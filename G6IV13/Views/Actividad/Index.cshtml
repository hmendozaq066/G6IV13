<!-- el tag-helper asp-action define la acción a donde se tiene que ir, 
si no hay controlador significa que es el mismo donde esta ubicado (Actividad) -->
<!-- class se establece el diseño del botón en la siguiete -->
<a asp-action="Agregar" class="btn btn-primary" >Agregar</a>
<!-- Primero se define la cabecera -->
<!-- class para el diseño que tenga bootstrap para ese elemento -->
<!-- mt- es el margen superior de la tabla puede ser del 1 al 5 -->
<table class="table table-striped table-hover mt-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        <!-- En este ciclo se repite las filas de la lista actividades -->
        @foreach(G6IV13.Models.Actividad item in ViewBag.Actividades)
        {
            <tr>
                <!-- Aquí se imprimen los valores de item -->
                <td>@item.ID</td>
                <td>@item.Descripcion</td>
                <td>@item.Estado</td>
            </tr>
        }
    </tbody>
</table>